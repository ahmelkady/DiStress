<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ahmed_elkady.projecand.MainActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/send"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/help"
                android:layout_width="270dp"
                android:layout_height="54dp"
                android:drawableLeft="@drawable/icons8_play"
                android:onClick="playMessage"
                android:text="Help me"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="107dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteX="43dp" />

            <Button
                android:id="@+id/following"
                android:layout_width="270dp"
                android:layout_height="44dp"
                android:drawableLeft="@drawable/icons8_play"

                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:text="Someone is following me"
                android:onClick="playMessage"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/police"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/help"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintVertical_bias="0.466"
                tools:layout_editor_absoluteX="43dp" />

            <Button
                android:id="@+id/police"
                android:layout_width="272dp"
                android:layout_height="52dp"
                android:drawableLeft="@drawable/icons8_play"
                android:onClick="playMessage"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:text="Contact the police"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="129dp"
                tools:layout_editor_absoluteX="42dp" />
        </android.support.constraint.ConstraintLayout>

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</LinearLayout>
